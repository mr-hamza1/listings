<% layout('/layouts/boilerplate') %>
<h2 class="offset-4">LOG IN WANDERLUST</h2><br>
    <div class="row">
        <div class="col-3 offset-4">
            <form method="post" action="/login" novalidate class="needs-validation">

                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                    <div class="invalid-feedback">username can't be empty!</div>

                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input type="password" name="password" id="password" minlength="3" maxlength="12" class="form-control" required>
                    <div class="invalid-feedback">password can't be empty! or min length is 5 characters</div>
                </div>
                <button class="btn btn-primary">login</button>
            </form>

        </div>
    </div>